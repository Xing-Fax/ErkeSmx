<UserControl x:Class="ErkeSmx.Notify"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ErkeSmx" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" d:DesignWidth="800" Width="865" Height="40" Initialized="UserControl_Initialized"  FontFamily="Roboto">
    <Grid>
        <materialDesign:PackIcon x:Name="Ico" Kind="Chat" Margin="10,0,0,0" Height="30" VerticalAlignment="Center" Width="30" Foreground="#FFFE624C" />
        <TextBlock TextWrapping="Wrap" Margin="45,10,210,10" VerticalAlignment="Center" FontWeight="Bold" FontSize="13"><Run x:Name="Title" Language="zh-cn" Text="活动报名成功提醒"/></TextBlock>
        <TextBlock x:Name="Time" TextWrapping="Wrap" Margin="580,0,10,0" VerticalAlignment="Center" TextAlignment="Right" Text="2023-03-02" Foreground="#CC000000"/>
    </Grid>
</UserControl>
