<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ErkeSmx"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="ErkeSmx.ComBox"
             mc:Ignorable="d" Width="204" Height="25" FontFamily="Roboto">
    <Grid>

        <materialDesign:PackIcon x:Name="Pack" Kind="StarShootingOutline" Height="20" VerticalAlignment="Center" Width="20" Margin="30,0,0,0" Foreground="{Binding Background, ElementName=button}"/>
        <TextBlock TextWrapping="Wrap" Margin="55,4,0,4" FontWeight="Bold" FontSize="15" HorizontalAlignment="Left" Foreground="#CC000000"><Run x:Name="Title" Language="zh-cn" Text="二课成绩单"/></TextBlock>
        <materialDesign:PackIcon x:Name="Pack_Copy" Kind="ChevronRight" Height="20" VerticalAlignment="Center" Width="20" Margin="140,0,0,0" Foreground="{Binding Foreground, ElementName=Pack}"/>
        <Button x:Name="button" Content="Button" Margin="0,0,119,-7" Width="0" Height="0" HorizontalAlignment="Left" VerticalAlignment="Top" BorderBrush="{x:Null}" Foreground="{x:Null}" Visibility="Hidden"/>

    </Grid>
</UserControl>
